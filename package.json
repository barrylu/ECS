{
  "name": "ECS",
  "version": "1.0.0",
  "description": "Javascript game framework",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack -p --hide-modules --config build/webpack.config.js",
    "test": "jest test/*",
    "cov": "jest test/* --coverage --silent"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/notonlysuccess/ECS"
  },
  "keywords": [
    "game",
    "framework"
  ],
  "author": "notonlysuccess",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.4.0",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-jest": "^20.0.3",
    "glob": "^7.0.5",
    "jest-cli": "^20.0.4",
    "path": "^0.12.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.15.0",
    "mocha": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      "/deepcopy/",
      "./test/*",
      "/node_modules/"
    ]
  },
  "dependencies": {
    "deepcopy": "^0.6.3"
  }
}
